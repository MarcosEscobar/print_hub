@import "mixins";

@font-face {
  font-family: 'IconicStroke';
  src: url('<%= image_path 'fonts/iconic_stroke.eot' %>');
  src: url('<%= image_path 'fonts/iconic_stroke.eot' %>?#iefix') format('embedded-opentype'),
       url('<%= image_path 'fonts/iconic_stroke.woff' %>') format('woff'),
       url('<%= image_path 'fonts/iconic_stroke.ttf' %>') format('truetype'),
       url('<%= image_path 'fonts/iconic_stroke.svg' %>#iconic') format('svg');
  font-weight: normal;
  font-style: normal;
}

footer.alert {
  position: fixed;
  bottom: 0em;
  left: 4em;
  right: 4em;
}

html, body {
  background-color: #eee;
}

#loading-caption {
  position: fixed;
  top: 0%;
  left: 50%;
  width: 10em;
  margin: 0em 0em 0em -5em;
  padding: .25em 1em;
  text-align: center;
  line-height: 30px;
  z-index: 1100;
}

.iconic {
  font-family: "IconicStroke";
  display: inline-block;
  text-decoration: none !important;
  font-size: 1.5em;
}

.iconic.large {
  font-size: 36px;
}

.logged-in {
  .container > .content {
    background-color: #fff;
    padding-top: 20px;
    @include border-radius(0 0 6px 6px);
    @include box-shadow(0, 1px, 2px, rgba(0,0,0,.15));
  }
  
  .form-inputs {
    padding: 6px 20px 18px;
  }
}

.logged-in[data-action="index"] {
  .pagination, .page-entries {
    margin-right: 20px;
  }
  
  .page-entries {
    font-size: .8em;
    margin-top: -18px;
  }
}

.logged-in[data-action="index"], .logged-in[data-action="show"] {
  .form-actions {
    padding-left: 20px;
  }
}

.nowrap {
  white-space: nowrap;
}

.readonly-data {
  margin: 0px 20px;
}

.ui-autocomplete {
  small {
    display: block;
    font-size: .75em;
    color: #999999;
  }
}

.ui-datepicker-trigger {
  display: none;
}