<div id="login">
  <%= form_for(@user_session) do |f| %>
    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, :autofocus => true %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.check_box :remember_me %><%= f.label :remember_me %>
    </div>
    <div class="actions">
      <%= f.submit t(:'view.user_sessions.login') %>
    </div>
  <% end %>
</div>

<% if @user_session.errors.any? %>
  <div id="login_error">
    <p><%= @user_session.errors.full_messages.join('; ') %></p>
    <div id="close_login_error"><%= link_to_function 'X',
      "$('login_error').fade()", :title => t(:'label.close') %></div>
  </div>
<% end %>