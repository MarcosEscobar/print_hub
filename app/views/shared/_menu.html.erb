<nav id="menu_links">
  <ul>
    <% if current_user.admin %>
      <li class="submenu">
        <%= link_to_menu_with_nested_menu(:admin, :submenu_admin) %>
        <div id="submenu_admin" style="display: none;">
          <ul>
            <%= content_tag(:li, link_to(t('menu.users'), users_path),
              class: ('selected' if controller_name == 'users')) %>
            <%= content_tag(:li, link_to(t('menu.customers'), customers_path),
              class: ('selected' if controller_name == 'customers')) %>
            <%= content_tag(:li, link_to(t('menu.bonuses'), bonuses_path),
              class: ('selected' if controller_name == 'bonuses')) %>
            <%= content_tag(:li, link_to(t('menu.settings'), settings_path),
              class: ('selected' if controller_name == 'settings')) %>
            <%= content_tag(:li, link_to(t('menu.payments'), payments_path),
              class: ('selected' if controller_name == 'payments')) %>
            <%= content_tag(:li, link_to(t('menu.stats'), printer_stats_path),
              class: ('selected' if controller_name == 'stats')) %>
          </ul>
        </div>
      </li>
    <% end %>
    <%= content_tag(:li, link_to(t('menu.prints'), prints_path),
      class: ('selected' if controller_name == 'prints')) %>
    <%= content_tag(:li, link_to(t('menu.documents'), documents_path),
      class: ('selected' if controller_name == 'documents')) %>
    <%= content_tag(:li, link_to(t('menu.tags'), tags_path),
      class: ('selected' if controller_name == 'tags')) %>
    <%= content_tag(:li, link_to(t('menu.articles'), articles_path),
      class: ('selected' if controller_name == 'articles')) %>
    <%= content_tag(:li, link_to(orders_text, orders_path),
      class: ('selected' if controller_name == 'orders')) %>
  </ul>
</nav>

<nav id="user_actions" class="hide_when_show_mobile_menu">
  <div id="user"><%= current_user.username %></div>
  <ul>
    <li>
      <%= link_to(
        t('menu.actions.logout'), user_sessions_path, method: :delete
      ) %>
    </li>
  </ul>
</nav>