<nav id="menu_links">
  <ul>
    <%= content_tag(:li, link_to(t('customer_menu.catalog'), catalog_path),
      class: ('selected' if controller_name == 'catalog')) %>
    <%= content_tag(:li, link_to(t('customer_menu.orders'), orders_path),
      class: ('selected' if controller_name == 'orders' && ['new', 'create'].exclude?(action_name))) %>
    <%= content_tag(:li, link_to(t('view.catalog.new_order'), new_order_path),
      class: "strong #{('selected' if controller_name == 'orders' && ['new', 'create'].include?(action_name))}") %>
  </ul>
</nav>
<nav id="user_actions">
  <div id="user" data-credit="<%= current_customer.free_credit_minus_pendings %>">
    <%= current_customer.email %>
  </div>
  <ul>
    <li><%= link_to t('menu.actions.logout'),
      customer_sessions_path, method: :delete %></li>
  </ul>
</nav>