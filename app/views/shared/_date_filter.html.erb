<div class="filter">
  <%= simple_form_for :interval, html: { method: :get } do |f| %>
    <table class="summary">
      <thead>
        <tr>
          <th><%= t("view.#{controller_name}.date_filter.start") %></th>
          <th><%= t("view.#{controller_name}.date_filter.end") %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>
            <div class="field">
              <%= calendar_text_field f, :from, time: true, value: from_date %>
            </div>
          </td>
          <td>
            <div class="field">
              <%= calendar_text_field f, :to, time: true, value: to_date %>
            </div>
          </td>
          <td>
            <div class="actions">
              <%= f.submit t("view.#{controller_name}.date_filter.apply") %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>