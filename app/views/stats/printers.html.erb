<%= include_stats_js %>
<%= render partial: 'shared/date_filter', locals: {
  from_date: @from_date, to_date: @to_date
} %>
<% if @printers_count.blank? %>
  <p><%= t('view.stats.empty_result') %></p>
<% else %>
  <div class="actions">
    <%= link_to t('view.stats.show_grid'), '#', class: 'show_grid' %>
    <%= link_to t('view.stats.show_graph'), '#', class: 'show_graph' %> |
    <%= link_to t('view.stats.download_csv'), printer_stats_path(params.merge(format: :csv)) %>
  </div>
  <div id="graph"></div>
  <table class="list" data-graph-grid="true">
    <thead>
      <tr>
        <th><%= Print.human_attribute_name 'printer' %></th>
        <th><%= PrintJob.human_attribute_name 'printed_copies' %></th>
      </tr>
    </thead>

    <tbody>
      <% @printers_count.sort { |a,b| a[1] <=> b[1] }.each do |printer, count| %>
        <tr>
          <td class="label"><%= printer %></td>
          <td class="value"><%= count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <section class="details">
    <h3><%= show_stats_total(@printers_count.sum(&:second)) %></h3>
  </section>
<% end %>
<nav class="links">
  <%= link_to t('view.stats.users_title'), user_stats_path %> |
  <%= link_to t('view.stats.prints_title'), print_stats_path %>
</nav>