<% if @parent_tag %>
  <nav class="path">
    <ul>
      <%= show_tag_path(@parent_tag) %>
    </ul>
  </nav>
<% end %>

<table class="list">
  <thead>
    <tr>
      <th><%= Tag.human_attribute_name :name %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <% classes = [cycle(:even, :odd), tag.private ? 'private' : 'public'] %>
      <tr class="<%= classes.join(' ') %>">
        <td><%= link_to tag.name, tags_path(:parent => tag) %> (<%= show_link_to_tag_documents(tag) %>)</td>
        <td><%= link_to t(:'label.show'), tag %></td>
        <td><%= link_to t(:'label.edit'), edit_tag_path(tag) %></td>
        <td><%= button_to t(:'label.delete'), tag,
          :confirm => t(:'messages.confirmation'), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav class="links">
  <%= pagination_links(@tags) %>
  <%= link_to t(:'label.new'), new_tag_path(:parent => params[:parent]) %>
</nav>