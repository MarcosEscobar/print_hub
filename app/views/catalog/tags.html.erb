<% if @parent_tag %>
  <nav>
    <ul class="breadcrumb">
      <%= show_catalog_tag_path(@parent_tag) %>
    </ul>
  </nav>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Tag.human_attribute_name :name %></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td>
          <%= show_link_to_tag_for_catalog(tag) %>
          (<%= show_link_to_tag_documents_for_catalog(tag) %>)
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= pagination_links(@tags) %>

<div class="form-actions">
  <%= link_to t('view.tags.index_title'), catalog_tags_path %>
</div>
