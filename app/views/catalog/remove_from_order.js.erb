  add_to_order_catalog_path(@document),
  :title => t(:title, :scope => [:view, :catalog, :add_to_order]),
  :remote => true, :method => :post
) %>
<% id = "#document_#{@document.id}_to_order" %>
$('<%= id %>').html('<%= message %>');