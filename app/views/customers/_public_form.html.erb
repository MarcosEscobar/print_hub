<% url = @customer.new_record? ?
  customers_path : update_profile_customer_path(@customer)
%>
<%= simple_form_for @customer, url: url do |f| %>
  <%= show_error_messages(@customer) %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= f.input :lastname %>
  <%= f.input :identification %>
  <%= f.input :email, required: true %>
  <%= f.input :password, required: true %>
  <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="actions">
    <% if @customer.new_record? %>
      <%= f.button :submit, t('view.customers.register') %>
      <%= t('label.or') %>
      <%= link_to t('label.back'), new_customer_session_path %>
    <% else %>
      <%= f.button :submit, t('view.customers.update_profile') %>
    <% end %>
  </div>
<% end %>