<br />
<%= render 'organization_header' %>
<div class="row">
  <div class="span7">
    <%= render 'welcome' %>
  </div>

  <div class="span4 offset1">
    <div id="login" class="public_form_container">
      <%= simple_form_for @customer_session do |f| %>
        <div class="form-inputs">
          <%= f.input :email, input_html: { autofocus: true, class: 'span3' } %>
          <%= f.input :password, input_html: { class: 'span3' } %>
          <%= f.input :remember_me, as: :boolean %>
        </div>
          
        <div class="form-actions">
          <%= f.button :submit, label: t('view.customer_sessions.login'), 
            input_html: { class: 'btn btn-primary' } %>
          &nbsp;&nbsp;<%= link_to t('view.customers.forgot_password'), 
            new_password_reset_path %>
        </div>
      <% end %>
    </div>
    
    <br />
    
    <div class="alert alert-success">
      <%= t('view.customers.registration_text') %>&nbsp;&nbsp;
      <%= link_to t('view.customers.register'), new_customer_path,
        class: 'btn btn-success' %>
    </div>
  </div>
</div>

<%= yield :bottom_content %>

<% if @customer_session.errors.any? %>
  <footer class="alert alert-error fade in" data-dismiss="alert" data-close-after="30000">
    <a class="close">&times;</a>
    <strong><%= @customer_session.errors.full_messages.join('; ') %></strong>
  </footer>
<% end %>
<%= render 'unsupported_warning' if explorer? %>  
