<header id="top_bar">
  <nav class="links">
    <p>
      <%= t('view.customers.registration_text') %>
      <%= link_to t('view.customers.register'), new_customer_path,
        class: 'large_link' %>
    </p>
  </nav>
  <%= render 'organization_header' %>
</header>

<section id="customer_login">
  <div id="login">
    <%= form_for(@customer_session) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <%= f.check_box :remember_me %><%= f.label :remember_me %>
      </div>
      <div class="actions">
        <%= f.submit t('view.customer_sessions.login') %>
        <%= link_to t('view.customers.forgot_password'), new_password_reset_path %>
      </div>
    <% end %>
  </div>
  <%= render 'welcome' %>
</section>

<% if @customer_session.errors.any? %>
  <div id="login_error">
    <p><%= @customer_session.errors.full_messages.join('; ') %></p>
    <div class="close"><%= link_to_function 'X',
      "$('#login_error').slideUp()", title: t('label.close') %></div>
  </div>
<% end %>
<%= render 'unsupported_warning' if explorer? %>