<div id="login">
  <%= form_for(@customer_session) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, :autocomplete => :off, :autofocus => true %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.check_box :remember_me %><%= f.label :remember_me %>
    </div>
    <div class="actions">
      <%= f.submit t(:'view.customer_sessions.login') %>
    </div>
  <% end %>
</div>

<% if @customer_session.errors.any? %>
  <div id="login_error">
    <p><%= @customer_session.errors.full_messages.join('; ') %></p>
    <div class="close"><%= link_to_function 'X',
      "$('#login_error').slideUp()", :title => t(:'label.close') %></div>
  </div>
<% end %>