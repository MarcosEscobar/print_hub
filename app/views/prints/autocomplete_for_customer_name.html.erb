<ul>
  <% @customers.each do |customer| %>
    <li data-id="<%= customer.id %>" data-free-credit="<%= customer.free_credit %>" data-options-url="<%= credit_detail_customer_path(customer) %>">
      <%= highlight customer.to_s, params[:q] %>
      <span class="informal">
        <%= highlight customer.identification, params[:q] %>
      </span>
    </li>
  <% end %>
</ul>