<%= simple_form_for(@article) do |f| %>
  <%= show_error_messages(@article) %>

  <%= f.input :code, input_html: { autofocus: true, maxlength: 10 } %>
  <%= f.input :name %>
  <%= f.input :price, input_html: { maxlength: 15 } %>
  <%= f.input :description %>
  <%= f.input :lock_version, as: :hidden %>
  <%= f.button :submit %>
<% end %>