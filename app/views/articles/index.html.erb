<table class="list">
  <thead>
    <tr>
      <th><%= Article.human_attribute_name :code %></th>
      <th><%= Article.human_attribute_name :name %></th>
      <th><%= Article.human_attribute_name :price %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr class="<%= cycle(:even, :odd) %>">
        <td><%= article.code %></td>
        <td><%= article.name %></td>
        <td><%= number_to_currency article.price %></td>
        <td><%= link_to t(:'label.show'), article %></td>
        <td><%= link_to t(:'label.edit'), edit_article_path(article) %></td>
        <td><%= button_to t(:'label.delete'), article,
          :confirm => t(:'messages.confirmation'), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav class="links">
  <%= pagination_links(@articles) %>
  <%= link_to t(:'label.new'), new_article_path %>
</nav>
