<table class="list">
  <thead>
    <tr>
      <th><%= Order.human_attribute_name :customer %></th>
      <th><%= Order.human_attribute_name :scheduled_at %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="<%= cycle(:even, :odd) %>">
        <td><%= order.customer %></td>
        <td><%= l order.scheduled_at, :format => :short if order.scheduled_at %></td>
        <td><%= link_to t(:'label.show'), order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav class="links">
  <%= pagination_links(@orders) %>
</nav>